#include <stdio.h>
/**
* main - Entry point of the program
* Description:number of values in an array and display them in reverse order.
*
* Return: 0 (success)
**/
int main(void)
{
    //
    int arr[100];
    int i, n;

    printf("Input the number of elements to store in the array:\n ");
    scanf("%d", &n);

    printf("Input %d number of elements in the array :\n",n);
    for(i = 0; i < n; i++)
    {
        printf("element - %d : ", i);
        scanf("%d", &arr[i]);
    }

    printf("\n The values stored into the array are:\n");
    for(i = 0; i < n; i++)
    {
        printf("%d", arr[i]);

    }
    printf("\nThe values store into the array in reverse are :");
    for(i = n-1; i >= 0; i--)
    {
        printf("%d", arr[i]);
    }
    printf("\n");

    return 0;
}
